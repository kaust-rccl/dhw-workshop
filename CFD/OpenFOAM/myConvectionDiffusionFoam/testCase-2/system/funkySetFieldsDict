FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      funkySetFieldsDict;
}


expressions
(
    T
    {
        field T;
        keepPatches true; 
        expression "sin(pi*pos().x/1.0) * sin(pi*pos().y/1.0) * sin(pi*pos().z/1.0)";
        condition "true"; // Apply everywhere inside the domain
    }
);


